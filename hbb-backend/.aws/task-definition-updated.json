{
  "family": "hbb-task-definition",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::512500290867:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::512500290867:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "hbb-container",
      "image": "512500290867.dkr.ecr.us-east-1.amazonaws.com/hbb-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "MEDIASOUP_MIN_PORT",
          "value": "40000"
        },
        {
          "name": "MEDIASOUP_MAX_PORT",
          "value": "49999"
        },
        {
          "name": "MEDIASOUP_ANNOUNCED_IP",
          "value": "54.86.45.7"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:512500290867:secret:hbb-database-url-C3ovHL"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:512500290867:secret:hbb-jwt-secret-ZQaOM0"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:512500290867:secret:hbb-redis-url-H22UoJ"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:512500290867:secret:hbb-aws-access-key-eMv0Vb"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:512500290867:secret:hbb-aws-secret-key-AZdvDB"
        },
        {
          "name": "STRIPE_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:512500290867:secret:hbb-stripe-secret-tulNcF"
        },
        {
          "name": "MAILGUN_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:512500290867:secret:hbb-mailgun-api-key-xxqlLh"
        },
        {
          "name": "DTLS_CERT_BASE64",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:512500290867:secret:hbb-dtls-cert-vXLLYJ"
        },
        {
          "name": "DTLS_KEY_BASE64",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:512500290867:secret:hbb-dtls-key-5LVrpx"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/hbb-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}