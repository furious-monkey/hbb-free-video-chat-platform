{
  "family": "hbb-task-definition",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::512500290867:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::512500290867:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "hbb-container",
      "image": "512500290867.dkr.ecr.us-east-1.amazonaws.com/hbb-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "MEDIASOUP_MIN_PORT",
          "value": "40000"
        },
        {
          "name": "MEDIASOUP_MAX_PORT",
          "value": "49999"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": ""
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": ""
        },
        {
          "name": "REDIS_URL",
          "valueFrom": ""
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": ""
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": ""
        },
        {
          "name": "STRIPE_SECRET_KEY",
          "valueFrom": ""
        },
        {
          "name": "MAILGUN_API_KEY",
          "valueFrom": ""
        },
        {
          "name": "DTLS_CERT_BASE64",
          "valueFrom": ""
        },
        {
          "name": "DTLS_KEY_BASE64",
          "valueFrom": ""
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/hbb-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
